<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_weight="2"
            android:id="@+id/list_item_imageview_photo"
            android:layout_width="0dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:id="@+id/list_item_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="牛肉饭"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="12.00元"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/list_item_button_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside"/>      <!-- button图片居中自适应控件大小-->

        <TextView
            android:id="@+id/list_item_number"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="35dp" />

        <ImageButton
            android:id="@+id/list_item_button_jian"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/jianhao"
            android:scaleType="centerInside"/>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>